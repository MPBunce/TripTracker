<%= render 'shared/nav', user: current_user %>

<div class="container mx-auto px-4 py-8">
  <% if @query.blank? %>
    <!-- No search query provided - show error/prompt -->
    <div class="hero min-h-[50vh]">
      <div class="hero-content text-center">
        <div class="max-w-md">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-24 w-24 mx-auto mb-4 text-error" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
          </svg>
          <h1 class="text-4xl font-bold mb-4">No Search Query</h1>
          <p class="py-6">Please use the search bar above to search for trips, users, or places.</p>
          <%= link_to "Go Home", root_path, class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  <% else %>
    <!-- Search query provided - show results -->
    <div class="mb-8">
      <h1 class="text-4xl font-bold mb-2">Search Results</h1>
      <p class="text-lg text-base-content/70">
        Showing results for: <span class="font-semibold">"<%= @query %>"</span>
      </p>
    </div>

    <!-- Users Results -->
    <div class="mb-8">
      <h2 class="text-2xl font-semibold mb-4 flex items-center gap-2">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
        </svg>
        Users (<%= @users.count %>)
      </h2>
      
      <% if @users.any? %>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
          <% @users.each do |user| %>
            <div class="card bg-base-100 shadow-xl">
              <div class="card-body">
                <div class="flex items-center gap-4">
                  <div class="avatar">
                    <div class="w-16 rounded-full">
                      <% if user.profile_image&.attached? %>
                        <%= image_tag user.profile_image, alt: user.email_address %>
                      <% else %>
                        <div class="bg-base-300 w-full h-full flex items-center justify-center">
                          <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                          </svg>
                        </div>
                      <% end %>
                    </div>
                  </div>
                  <div>
                    <h3 class="card-title text-lg">
                      <%= user.first_name %> <%= user.last_name %>
                    </h3>
                    <p class="text-sm text-base-content/70"><%= user.email_address %></p>
                  </div>
                </div>
                  <div class="card-actions justify-end mt-4">

                    <% if current_user && current_user != user %>
                      <% follow = Follow.find_by(follower: current_user, followee: user) %>

                      <%= button_to(
                            follow ? "Unfollow" : "Follow",
                            follow ? follow_path(follow) : follows_path(user_id: user.id),
                            method: follow ? :delete : :post,
                            class: "btn btn-sm #{follow ? 'btn-secondary' : 'btn-primary'}"
                          ) %>
                    <% end %>


                    <%= link_to "View Profile", user_path(user), class: "btn btn-sm btn-primary" %>
                  </div>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="alert">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <span>No users found matching your search.</span>
        </div>
      <% end %>
    </div>

    <!-- Trips Results -->
    <div class="mb-8">
      <h2 class="text-2xl font-semibold mb-4 flex items-center gap-2">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        Trips (<%= @trips.count %>)
      </h2>
      
      <% if @trips.any? %>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
          <% @trips.each do |trip| %>
            <div class="card bg-base-100 shadow-xl">
              <div class="card-body">
                <h3 class="card-title"><%= trip.title %></h3>
                <p class="text-sm text-base-content/70">
                  by <%= link_to trip.user.first_name, user_path(trip.user), class: "link link-primary" %>
                </p>
                <% if trip.description.present? %>
                  <p class="text-sm line-clamp-3"><%= trip.description %></p>
                <% end %>
                <div class="card-actions justify-end mt-4">
                  <%= link_to "View Trip", trip_path(trip), class: "btn btn-sm btn-primary" %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="alert">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <span>No trips found matching your search.</span>
        </div>
      <% end %>
    </div>

  <% end %>
</div>