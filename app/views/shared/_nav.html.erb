<nav class="navbar bg-base-100 shadow-lg rounded-full max-w-7xl mx-auto mt-4 px-6">
  <!-- Left: Logo (always visible) -->
  <div class="flex-none">
    <%= link_to root_path, class: "btn btn-ghost text-xl font-bold" do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
      </svg>
      <span class="hidden lg:inline-block">TripTracker</span>
    <% end %>
  </div>

  <!-- Middle: Search Bar (always visible) -->
  <div class="flex-1 px-4">
    <%= form_with url: search_path, method: :get, class: "form-control" do |f| %>
      <div class="input-group flex w-full max-w-md mx-auto">
        <%= f.text_field :query, 
            placeholder: "Search trips, places, users...", 
            class: "input input-bordered input-sm w-full rounded-full",
            value: params[:query] %>
        <%= button_tag type: "submit", class: "btn btn-ghost btn-sm btn-circle" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
          </svg>
        <% end %>
      </div>
    <% end %>
  </div>

  <% if user %>
    <!-- Right: New Trip + Logout + Profile (when logged in) -->
    <div class="flex-none flex flex-row items-center gap-2">
      <!-- New Trip Button -->
      <%= link_to new_trip_path, class: "btn btn-ghost btn-circle", title: "Create New Trip" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
        </svg>
      <% end %>

      <!-- Logout Button -->
      <%= link_to session_path, method: :delete, data: { turbo_method: :delete }, class: "btn btn-ghost btn-circle", title: "Logout" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
        </svg>
      <% end %>

      <!-- Profile Dropdown -->
      <div class="dropdown dropdown-end">
        <label tabindex="0" class="btn btn-ghost btn-circle avatar">
          <% if user.profile_image&.attached? %>
            <div class="w-10 rounded-full">
              <%= image_tag user.profile_image, alt: user.email_address %>
            </div>
          <% else %>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
            </svg>
          <% end %>
        </label>
        <ul tabindex="0" class="mt-3 z-[1] p-2 shadow menu menu-sm dropdown-content bg-base-100 rounded-box w-52">
          <li class="menu-title">
            <span><%= user.email_address %></span>
          </li>
          <li>
            <%= link_to user_path(user) do %>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
              </svg>
              Profile
            <% end %>
          </li>
          <li>
            <%= link_to trips_path do %>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
              </svg>
              My Trips
            <% end %>
          </li>
          <li>
            <%= link_to edit_user_path(user) do %>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
              Settings
            <% end %>
          </li>
        </ul>
      </div>
    </div>
  <% else %>
    <!-- Right: Sign In/Sign Up (when logged out) -->
    <div class="flex-none gap-2">
      <%= link_to "Sign In", new_session_path, class: "btn btn-ghost" %>
      <%= link_to "Sign Up", new_user_path, class: "btn btn-primary" %>
    </div>
  <% end %>
</nav>