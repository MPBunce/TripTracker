<li class="trip-day">
  <hr class="bg-blue-500"/>
  <div class="timeline-middle">
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="h-5 w-5 text-blue-500">
      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z" clip-rule="evenodd" />
    </svg>
  </div>
  
  <!-- LEFT SIDE (for even days) -->
  <div class="timeline-start mb-10 md:text-end">
    <div class="text-lg font-black day-badge text-blue-500 mb-2">Day</div>
    <%= f.date_field :date, class: "input input-bordered input-sm border-blue-500" %>
    
    <div class="timeline-box mt-4 relative text-left">
      <button type="button"
              class="btn btn-error btn-xs btn-circle absolute top-2 right-2 remove-day-btn"
              data-action="click->trip-days#remove">
        ✕
      </button>
      
      <%= f.hidden_field :day_number, class: "day-number-input" %>
      
      <div class="grid grid-cols-1 gap-3 mt-2">
        <div>
          <%= f.label :location, class: "font-semibold" %>
          <%= f.text_field :location, class: "input input-bordered w-full" %>
        </div>
        <div>
          <%= f.label :title, "Activity Title", class: "font-semibold" %>
          <%= f.text_field :title, class: "input input-bordered w-full" %>
        </div>
        <div>
          <%= f.label :description, class: "font-semibold" %>
          <%= f.text_area :description, rows: 3, class: "textarea textarea-bordered w-full" %>
        </div>
        <div>
          <%= f.label :images, "Day Photos", class: "font-semibold" %>
          <%= f.file_field :images, multiple: true, accept: "image/*", class: "file-input file-input-bordered w-full" %>
        </div>
      </div>
      
      <%= f.hidden_field :_destroy, class: "destroy-flag" %>
    </div>
  </div>
  
  <!-- RIGHT SIDE (for odd days) -->
  <div class="timeline-end mb-10">
    <div class="text-lg font-black day-badge text-blue-500 mb-2">Day</div>
    <%= f.date_field :date, class: "input input-bordered input-sm border-blue-500" %>
    
    <div class="timeline-box mt-4 relative">
      <button type="button"
              class="btn btn-error btn-xs btn-circle absolute top-2 right-2 remove-day-btn"
              data-action="click->trip-days#remove">
        ✕
      </button>
      
      <%= f.hidden_field :day_number, class: "day-number-input" %>
      
      <div class="grid grid-cols-1 gap-3 mt-2">
        <div>
          <%= f.label :location, class: "font-semibold" %>
          <%= f.text_field :location, class: "input input-bordered w-full" %>
        </div>
        <div>
          <%= f.label :title, "Activity Title", class: "font-semibold" %>
          <%= f.text_field :title, class: "input input-bordered w-full" %>
        </div>
        <div>
          <%= f.label :description, class: "font-semibold" %>
          <%= f.text_area :description, rows: 3, class: "textarea textarea-bordered w-full" %>
        </div>
        <div>
          <%= f.label :images, "Day Photos", class: "font-semibold" %>
          <%= f.file_field :images, multiple: true, accept: "image/*", class: "file-input file-input-bordered w-full" %>
        </div>
      </div>
      
      <%= f.hidden_field :_destroy, class: "destroy-flag" %>
    </div>
  </div>
  
  <hr class="bg-blue-500"/>
</li>