<div class="container mx-auto p-4 space-y-4">
  <%= render 'shared/navbartwo', user: @user %>
  
  <div class="card bg-base-200 shadow-xl">
    <div class="card-body">
      <div class="flex justify-between items-center mb-4">
        <h1 class="text-3xl font-bold text-base-content">Users</h1>
        <%= link_to "New User", new_user_path, class: "btn btn-primary" %>
      </div>
      
      <div class="bg-base-200 shadow-lg rounded-lg overflow-hidden">
    <div class="overflow-x-auto">
      <table class="table table-zebra w-full">
        <thead class="bg-base-200">
          <tr>
            <th class="text-base-content">Email Address</th>
            <th class="text-base-content text-right">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr class="hover">
              <td class="text-base-content">
                <%= user.email_address %>
              </td>
              <td class="text-right">
                <div class="flex justify-end gap-2">
                  <%= link_to "View", user, class: "btn btn-sm btn-info" %>
                  <%= link_to "Edit", edit_user_path(user), class: "btn btn-sm btn-success" %>
                  <%= button_to "Delete", user, method: :delete,
                      data: { turbo_confirm: "Are you sure?" },
                      class: "btn btn-sm btn-error" %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
    </div>
  </div>
</div>