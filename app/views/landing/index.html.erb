<%= render 'shared/nav', user: current_user %>
<div class="min-h-screen">
  <% if current_user %>
    <!-- Logged In User View -->
    <div class="container mx-auto px-4 py-8">
      <!-- Welcome Section -->
      <div class="mb-8">
        <h1 class="text-4xl font-bold mb-2">Welcome back, <%= current_user.first_name %>!</h1>
        <p class="text-lg text-base-content/70">Ready for your next adventure?</p>
      </div>

      <!-- Quick Actions -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-12">
        <div class="card bg-gradient-to-br from-primary to-primary-focus text-primary-content shadow-xl hover:scale-105 transition-transform">
          <div class="card-body">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
            </svg>
            <h2 class="card-title">Create New Trip</h2>
            <p>Start planning your next adventure</p>
            <div class="card-actions justify-end mt-4">
              <%= link_to "Create Trip", new_trip_path, class: "btn btn-ghost" %>
            </div>
          </div>
        </div>

        <div class="card bg-gradient-to-br from-secondary to-secondary-focus text-secondary-content shadow-xl hover:scale-105 transition-transform">
          <div class="card-body">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
            </svg>
            <h2 class="card-title">My Trips</h2>
            <p>View and manage your trips</p>
            <div class="card-actions justify-end mt-4">
              <%= link_to "View All", trips_path, class: "btn btn-ghost" %>
            </div>
          </div>
        </div>

        <div class="card bg-gradient-to-br from-accent to-accent-focus text-accent-content shadow-xl hover:scale-105 transition-transform">
          <div class="card-body">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
            </svg>
            <h2 class="card-title">Profile</h2>
            <p>Update your information</p>
            <div class="card-actions justify-end mt-4">
              <%= link_to "Edit Profile", edit_user_path(current_user), class: "btn btn-ghost" %>
            </div>
          </div>
        </div>
      </div>

      <!-- Recent Trips Section -->
      <div class="mb-12">
        <div class="flex justify-between items-center mb-6">
          <h2 class="text-3xl font-bold">Your Recent Trips</h2>
          <%= link_to "View All →", trips_path, class: "link link-primary" %>
        </div>
        
        <% if @recent_trips&.any? %>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <% @recent_trips.each do |trip| %>
              <div class="card bg-base-100 shadow-xl hover:shadow-2xl transition-shadow">
                <div class="card-body">
                  <h3 class="card-title"><%= trip.title %></h3>
                  <% if trip.description.present? %>
                    <p class="text-sm text-base-content/70 line-clamp-3"><%= trip.description %></p>
                  <% end %>
                  <div class="flex items-center gap-2 text-sm text-base-content/60 mt-2">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                    </svg>
                    <%= trip.created_at.strftime("%B %d, %Y") %>
                  </div>
                  <div class="card-actions justify-end mt-4">
                    <%= link_to "View Details", trip_path(trip), class: "btn btn-primary btn-sm" %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="card bg-base-200">
            <div class="card-body text-center">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 mx-auto mb-4 text-base-content/30" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
              </svg>
              <h3 class="text-xl font-semibold mb-2">No trips yet</h3>
              <p class="text-base-content/70 mb-4">Start your journey by creating your first trip!</p>
              <%= link_to "Create Your First Trip", new_trip_path, class: "btn btn-primary" %>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Recent Trips Feed -->
      <div class="mb-12">
        <div class="flex justify-between items-center mb-6">
          <h2 class="text-3xl font-bold">Recent Trips from the Community</h2>
        </div>
        
        <% if @all_recent_trips&.any? %>
          <div class="space-y-6">
            <% @all_recent_trips.each do |trip| %>
              <div class="card bg-base-100 shadow-xl hover:shadow-2xl transition-shadow">
                <div class="card-body">
                  <!-- User Info Header -->
                  <div class="flex items-center gap-3 mb-4">
                    <div class="avatar">
                      <div class="w-12 rounded-full">
                        <% if trip.user.profile_image&.attached? %>
                          <%= image_tag trip.user.profile_image, alt: trip.user.first_name %>
                        <% else %>
                          <div class="bg-base-300 w-full h-full flex items-center justify-center">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                            </svg>
                          </div>
                        <% end %>
                      </div>
                    </div>
                    <div>
                      <p class="font-semibold">
                        <%= link_to "#{trip.user.first_name} #{trip.user.last_name}", user_path(trip.user), class: "link link-hover" %>
                      </p>
                      <p class="text-xs text-base-content/60">
                        <%= time_ago_in_words(trip.created_at) %> ago
                      </p>
                    </div>
                  </div>

                  <!-- Trip Content -->
                  <h3 class="card-title text-2xl mb-2"><%= trip.title %></h3>
                  <% if trip.description.present? %>
                    <p class="text-base-content/80"><%= trip.description %></p>
                  <% end %>

                  <!-- Trip Stats -->
                  <div class="flex items-center gap-4 mt-4 text-sm text-base-content/60">
                    <div class="flex items-center gap-1">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                      </svg>
                      <span><%= trip.trip_days.count %> days</span>
                    </div>
                    <div class="flex items-center gap-1">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z" />
                      </svg>
                      <span><%= trip.comments.count %> comments</span>
                    </div>
                  </div>

                  <!-- Actions -->
                  <div class="card-actions justify-end mt-4">
                    <%= link_to "View Trip", trip_path(trip), class: "btn btn-primary" %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>

          <!-- Pagination hint -->
          <div class="text-center mt-8">
            <%= link_to "View All Trips →", trips_path, class: "btn btn-outline btn-lg" %>
          </div>
        <% else %>
          <div class="card bg-base-200">
            <div class="card-body text-center">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 mx-auto mb-4 text-base-content/30" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
              </svg>
              <h3 class="text-xl font-semibold mb-2">No trips yet</h3>
              <p class="text-base-content/70 mb-4">Be the first to share your adventure!</p>
              <%= link_to "Create a Trip", new_trip_path, class: "btn btn-primary" %>
            </div>
          </div>
        <% end %>
      </div>

    </div>
  <% else %>
    <!-- Guest/Landing Page View -->
    <div class="hero min-h-[80vh] bg-gradient-to-br from-primary/10 to-secondary/10">
      <div class="hero-content text-center">
        <div class="max-w-2xl">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-32 w-32 mx-auto mb-8 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <h1 class="text-6xl font-bold mb-4">TripTracker</h1>
          <p class="text-2xl mb-8">Plan, Track, and Share Your Adventures</p>
          <p class="text-lg text-base-content/70 mb-8">
            Create detailed trip itineraries, document your journey day by day, and share your experiences with friends and family.
          </p>
          <div class="flex gap-4 justify-center">
            <%= link_to "Get Started", new_user_path, class: "btn btn-primary btn-lg" %>
            <%= link_to "Sign In", new_session_path, class: "btn btn-outline btn-lg" %>
          </div>
        </div>
      </div>
    </div>

    <!-- Features Section -->
    <div class="container mx-auto px-4 py-16">
      <h2 class="text-4xl font-bold text-center mb-12">Why TripTracker?</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="card bg-base-100 shadow-xl">
          <div class="card-body items-center text-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 text-primary mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01" />
            </svg>
            <h3 class="card-title">Plan Your Journey</h3>
            <p>Create detailed itineraries and organize your trip day by day with ease.</p>
          </div>
        </div>

        <div class="card bg-base-100 shadow-xl">
          <div class="card-body items-center text-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 text-secondary mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
            <h3 class="card-title">Track Daily Activities</h3>
            <p>Document each day of your trip with notes, photos, and memories.</p>
          </div>
        </div>

        <div class="card bg-base-100 shadow-xl">
          <div class="card-body items-center text-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 text-accent mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
            </svg>
            <h3 class="card-title">Share & Connect</h3>
            <p>Share your adventures with others and discover amazing trips from the community.</p>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>